<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_base_tips_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_tips_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="22dp"
        android:text=""
        android:textColor="#ff333333"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ebeef5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tips_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/base_theme_primary"
            android:textSize="17sp" />

        <View
            android:id="@+id/view_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ff333333" />
        <TextView
            android:id="@+id/tv_tips_sure"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_toEndOf="@+id/tv_tips_cancel"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/base_theme_primary"
            android:textSize="17sp" />

    </LinearLayout>

</LinearLayout>