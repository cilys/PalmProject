<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleImageView">
        <attr format="dimension" name="border_width"/>
        <attr format="color" name="border_color"/>
    </declare-styleable>


    <declare-styleable name="CircularProgressView">
        <attr name="backWidth" format="dimension" />    <!--背景圆环宽度-->
        <attr name="progWidth" format="dimension" />    <!--进度圆环宽度-->
        <attr name="backColor" format="color" />        <!--背景圆环颜色-->
        <attr name="progColor" format="color" />        <!--进度圆环颜色-->
        <attr name="progStartColor" format="color" />   <!--进度圆环开始颜色-->
        <attr name="progFirstColor" format="color" />   <!--进度圆环结束颜色-->
        <attr name="progress" format="integer" />       <!--圆环进度-->
    </declare-styleable>


    <!--注意这里的name要和自定义View的名称一致，不然在xml布局中无法引用-->
    <declare-styleable name="CircleBarView">
        <attr name="progress_color" format="color"></attr>
        <attr name="bg_color" format="color"></attr>

        <attr name="bar_width" format="dimension"></attr>

        <attr name="start_angle" format="float"></attr>
        <attr name="sweep_angle" format="float"></attr>
    </declare-styleable>




    <declare-styleable name="SegmentedBarView">

        <attr name="seg_outerRadii" format="dimension|reference"/>

        <attr name="seg_outerMarginWidth" format="dimension|reference"/>

        <attr name="seg_selectedColor" format="color|reference"/>

        <attr name="seg_unSelectedColor" format="color|reference"/>

        <attr name="seg_outerMarginColor" format="color|reference"/>

        <attr name="seg_selectedTextColor" format="color|reference"/>

        <attr name="seg_unSelectedTextColor" format="color|reference"/>

        <attr name="seg_isShowLine" format="boolean"/>

        <attr name="seg_textSize" format="dimension|reference"/>

        <attr name="seg_isCircleFrame" format="boolean|reference"/>

    </declare-styleable>
</resources>