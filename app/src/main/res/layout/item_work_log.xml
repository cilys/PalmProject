<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="126dp"
    android:background="@drawable/shape_mine_card_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:text="周祚栋"
            android:textColor="@color/theme_font_black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:text="2019年 10月25日 星期一"
            android:textColor="#FF888888"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="当日完成工作：完成任务 0 过期任务 0 进行中任...."
            android:textColor="#FF6F6D6D"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="总结与障碍：。。。。。。。"
            android:textColor="#FF6F6D6D"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="工作计划：。。。。。。。"
            android:textColor="#FF6F6D6D"
            android:textSize="13sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_type"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/shape_work_log_type"
        android:gravity="center"
        android:text="日报"
        android:textColor="@color/theme_white"
        android:textSize="14dp" />

</RelativeLayout>