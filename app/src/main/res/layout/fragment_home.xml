<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/theme_white"
        android:layout_height="90dp">

        <com.aopcloud.palmproject.view.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:border_width="0dp"
            app:border_color="@color/theme_white"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp"
            android:src="@color/theme_color" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="2dp"
            android:layout_toStartOf="@+id/tv_city"
            android:src="@mipmap/icon_about_logo" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="梅州市"
            android:textColor="@color/theme_font_black"
            android:textSize="14sp" />
        <ImageView
            android:id="@+id/iv_city"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="1dp"
            android:layout_alignTop="@+id/tv_city"
            android:layout_marginRight="2dp"
            android:layout_toEndOf="@+id/tv_city"
            android:src="@mipmap/icon_down" />


        <ImageView
            android:id="@+id/iv_scan_qr_code"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/icon_scan" />


        <TextView
            android:id="@+id/tv_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="12dp"
            android:text="任务"
            android:textColor="@color/theme_font_orange"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/tv_task"
            android:text="项目"
            android:textColor="@color/theme_font_black"
            android:textSize="16dp" />
    </RelativeLayout>
 <android.support.v4.view.ViewPager
     android:id="@+id/page_view"
     android:layout_width="match_parent"
     android:layout_height="match_parent"/>
</LinearLayout>