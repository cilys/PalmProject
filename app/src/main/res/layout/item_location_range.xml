<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical">


        <View
            android:id="@+id/view_left_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#aaaaaa" />

        <View
            android:id="@+id/view_tag"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/shape_map_range_n" />
        <View
            android:id="@+id/view_tag_select"
            android:layout_width="25dp"
            android:visibility="gone"
            android:background="@drawable/shape_map_range_s"
            android:layout_height="25dp"
          />
        <View
            android:id="@+id/view_right_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#aaaaaa" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:text="100"
        android:textColor="@color/theme_font_black"
        android:textSize="12dp" />
</LinearLayout>