<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_color"
    android:orientation="vertical">

    <include layout="@layout/layout_common_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_white">


        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="176dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="77dp"
            android:src="@mipmap/icon_about_logo" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_logo"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/theme_font_black"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tv_version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_name"
            android:gravity="center"
            android:text="当前版本 V 1.0.0"
            android:textColor="@color/theme_font_black"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_version_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_version_name"
            android:gravity="center"
            android:text="更新日志"
            android:textColor="@color/theme_color"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="42dp"
            android:gravity="center"
            android:text="客服热线: 13823800000"
            android:textColor="@color/theme_color"
            android:textSize="14dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="18dp"
            android:gravity="center"
            android:text="广州市锋云计算机科技有限公司版权所有"
            android:textColor="@color/theme_font_6f"
            android:textSize="13dp" />
    </RelativeLayout>
</LinearLayout>