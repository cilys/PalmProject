<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0.0dip"
    android:padding="0.0dip">

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0.0dip" />

    <com.uuzuche.lib_zxing.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="0.0dip"
        android:padding="0.0dip"
        app:inner_corner_color="@color/theme_color"
        app:inner_corner_length="15.0dip"
        app:inner_corner_width="2.0dip"
        app:inner_height="250.0dip"
        app:inner_margintop="140dp"
        app:inner_scan_bitmap="@drawable/scanning_line"
        app:inner_scan_iscircle="true"
        app:inner_scan_speed="7"
        app:inner_width="250.0dip" />

    <TextView
        android:layout_marginTop="400dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:gravity="center"
        android:text="将二维码/条码放入框内，即可自动扫描 "
        />


</RelativeLayout>