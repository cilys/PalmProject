<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/theme_white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:text="任务状态"
        android:textColor="#FF101010"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center">

            <CheckBox
                android:id="@+id/checkbox_no_started"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_task_filter"
                android:button="@null"
                android:gravity="center"
                android:text="未开始"
                android:textColor="@color/color_task_filter_text_color"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <CheckBox
                android:id="@+id/checkbox_progress"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_task_filter"
                android:button="@null"
                android:gravity="center"
                android:text="进行中"
                android:textColor="@color/color_task_filter_text_color"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <CheckBox
                android:id="@+id/checkbox_overtime"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_task_filter"
                android:button="@null"
                android:gravity="center"
                android:text="已超期"
                android:textColor="@color/color_task_filter_text_color"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <CheckBox
                android:id="@+id/checkbox_complete"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_task_filter"
                android:button="@null"
                android:gravity="center"
                android:text="已完成"
                android:textColor="@color/color_task_filter_text_color"
                android:textSize="12sp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center">

            <CheckBox
                android:id="@+id/checkbox_cancel"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_task_filter"
                android:button="@null"
                android:gravity="center"
                android:text="已取消"
                android:textColor="@color/color_task_filter_text_color"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <CheckBox
                android:id="@+id/checkbox_pause"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_task_filter"
                android:button="@null"
                android:gravity="center"
                android:text="暂停中"
                android:textColor="@color/color_task_filter_text_color"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <CheckBox
                android:id="@+id/checkbox_in"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_task_filter"
                android:button="@null"
                android:gravity="center"
                android:text="作业中"
                android:textColor="@color/color_task_filter_text_color"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <CheckBox
                android:id="@+id/checkbox_no_assign"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_task_filter"
                android:button="@null"
                android:gravity="center"
                android:text="未安排"
                android:textColor="@color/color_task_filter_text_color"
                android:textSize="12sp" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:text="优先级"
        android:textColor="#FF101010"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:gravity="center">

            <CheckBox
                android:id="@+id/checkbox_level_1"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_task_filter"
                android:button="@null"
                android:gravity="center"
                android:text="普通"
                android:textColor="@color/color_task_filter_text_color"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <CheckBox
                android:id="@+id/checkbox_level_2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_task_filter"
                android:button="@null"
                android:gravity="center"
                android:text="重要"
                android:textColor="@color/color_task_filter_text_color"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <CheckBox
                android:id="@+id/checkbox_level_3"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_task_filter"
                android:button="@null"
                android:gravity="center"
                android:text="紧急"
                android:textColor="@color/color_task_filter_text_color"
                android:textSize="12sp" />


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:text="优先级"
        android:textColor="#FF101010"
        android:textSize="14sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:background="@drawable/shape_et_bg"
        android:drawableLeft="@mipmap/icon_et_search"
        android:gravity="center_vertical"
        android:hint="请输入关键字查询"
        android:padding="6dp"
        android:textColor="#FF888888"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:background="@color/theme_background_f5"
        android:paddingTop="1dp">


        <TextView
            android:id="@+id/tv_reset"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/theme_white"
            android:gravity="center"
            android:text="重置"
            android:textColor="#FF888888"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/theme_color"
            android:gravity="center"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="normal" />

    </LinearLayout>
</LinearLayout>