<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/theme_color">

        <TextView
            android:id="@+id/tv_enterprise_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:text=""
            android:textColor="@color/theme_white"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/theme_color"
        android:paddingTop="20dp"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_cancel"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_enterprise_info" />

                <TextView
                    android:id="@+id/tv_company_count"
                    android:layout_alignParentRight="true"
                    style="@style/style_tv_oval_red" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="企业信息"
                android:textColor="@color/theme_white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_cancel"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_enterprise_tell" />

                <TextView
                    android:id="@+id/tv_tell_count"
                    android:layout_alignParentRight="true"
                    style="@style/style_tv_oval_red" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="通讯录"
                android:textColor="@color/theme_white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_cancel"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_enterprise_todo" />

                <TextView
                    android:id="@+id/tv_work_count"
                    android:layout_alignParentRight="true"
                    style="@style/style_tv_oval_red" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="工作汇报"
                android:textColor="@color/theme_white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/iv_cancel"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitXY"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/icon_enterprise_todo" />

                <TextView
                    android:id="@+id/tv_apply_count"
                    android:layout_alignParentRight="true"
                    style="@style/style_tv_oval_red" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="申请审批"
                android:textColor="@color/theme_white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@mipmap/img_enterprise_header">
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_enterprise_item_bg"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:text="我的任务" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/ll_0"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <View
                                android:id="@+id/view_splite_line_0"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/theme_color"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="派给我的"
                                android:gravity="center"
                                android:layout_margin="@dimen/dp_10"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <View
                                android:id="@+id/view_splite_line_1"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:visibility="invisible"
                                android:background="@color/theme_color"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="我参与的"
                                android:gravity="center"
                                android:layout_margin="@dimen/dp_10"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <View
                                android:id="@+id/view_splite_line_2"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:visibility="invisible"
                                android:background="@color/theme_color"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="我发起的"
                                android:gravity="center"
                                android:layout_margin="@dimen/dp_10"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_10" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <com.cilys.app.view.NoScrollViewPager
                    android:id="@+id/noVp_count"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_project_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toStartOf="@+id/tv_project_count"
                    android:gravity="center"
                    android:text="------"
                    android:textColor="@color/theme_font_6f"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_project_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"

                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:minWidth="100dp"
                    android:text="最近查看项目 "
                    android:textColor="@color/theme_font_6f"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_project_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@+id/tv_project_count"
                    android:gravity="center"
                    android:text="------"
                    android:textColor="@color/theme_font_6f"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_project_more"
                    android:layout_width="58dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_head_more"
                    android:gravity="center"
                    android:text="更多"
                    android:textColor="@color/theme_font_6f"
                    android:textSize="12dp" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_task_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toStartOf="@+id/tv_task_count"
                    android:gravity="center"
                    android:text="------"
                    android:textColor="@color/theme_font_6f"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_task_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"

                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:minWidth="100dp"
                    android:text="最近查看任务"
                    android:textColor="@color/theme_font_6f"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_task_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@+id/tv_task_count"
                    android:gravity="center"
                    android:text="------"
                    android:textColor="@color/theme_font_6f"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_task_more"
                    android:layout_width="58dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape_head_more"
                    android:gravity="center"
                    android:text="更多"
                    android:textColor="@color/theme_font_6f"
                    android:textSize="12dp" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>