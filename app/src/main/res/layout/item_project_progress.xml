<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/rl_item"
    android:orientation="vertical">


    <com.aopcloud.palmproject.view.CircleImageView
        android:id="@+id/iv_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:src="@color/theme_color"
        app:border_color="#00000000"
        app:border_width="0dp" />


    <View
        android:id="@+id/view_line"
        android:layout_width="0.6dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:background="#FFD8D9D9" />

    <View
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_project_dot" />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:ellipsize="end"
        android:text=" "
        android:textColor="#FF101010"
        android:textSize="14dp" />


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="6dp"
        android:text="2019-10-20   12:00"
        android:textColor="#FF101010"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="6dp"
        android:text="反馈留言"
        android:textColor="#FF101010"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/ll_task_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_message"
        android:layout_marginLeft="90dp"
        android:orientation="vertical">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp" />
    </LinearLayout>


</RelativeLayout>