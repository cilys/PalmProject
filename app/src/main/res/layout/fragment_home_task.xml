<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_f5"
    android:fillViewport="true">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 内容区 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.amap.api.maps.MapView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_filter"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/shape_submit_4dp"
                android:gravity="center"
                android:text="筛选"
                android:textColor="@color/theme_white"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_all"
                android:layout_width="130dp"
                android:layout_height="38dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="17dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shape_home_menu_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="全部任务"
                    android:textColor="@color/theme_white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="|"
                    android:textColor="@color/theme_white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/theme_white"
                    android:textSize="14sp" />
            </LinearLayout>


            <ImageView
                android:id="@+id/iv_refresh"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/map_view"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="90dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/shape_task_location"
                android:padding="3dp"
                android:src="@mipmap/dingwei" />
        </RelativeLayout>

        <!-- 左边菜单 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#ffffff"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_background_f5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <Spinner
                    android:id="@+id/spinner_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:entries="@array/spinner_home_task_type" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/theme_background_f5" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:text="状态"
                    android:textColor="#FF101010"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/checkbox_state_all"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/selector_home_checkbox_filter"
                    android:button="@null"
                    android:gravity="center"
                    android:text="全部"
                    android:textColor="@color/color_home_checkbox_filter"
                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <CheckBox
                        android:id="@+id/checkbox_state_progress"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/selector_home_checkbox_filter"
                        android:button="@null"
                        android:gravity="center"
                        android:text="进行中"
                        android:textColor="@color/color_home_checkbox_filter"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <CheckBox
                        android:id="@+id/checkbox_state_expect"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/selector_home_checkbox_filter"
                        android:button="@null"
                        android:gravity="center"
                        android:text="已超期"
                        android:textColor="@color/color_home_checkbox_filter"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <CheckBox
                        android:id="@+id/checkbox_state_complete"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/selector_home_checkbox_filter"
                        android:button="@null"
                        android:gravity="center"
                        android:text="已完成"
                        android:textColor="@color/color_home_checkbox_filter"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <CheckBox
                        android:id="@+id/checkbox_state_no_start"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/selector_home_checkbox_filter"
                        android:button="@null"
                        android:gravity="center"
                        android:text="未开始"
                        android:textColor="@color/color_home_checkbox_filter"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <CheckBox
                        android:id="@+id/checkbox_state_cancel"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/selector_home_checkbox_filter"
                        android:button="@null"
                        android:gravity="center"
                        android:text="已取消"
                        android:textColor="@color/color_home_checkbox_filter"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <CheckBox
                        android:id="@+id/checkbox_state_pause"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/selector_home_checkbox_filter"
                        android:button="@null"
                        android:gravity="center"
                        android:text="暂停中"
                        android:textColor="@color/color_home_checkbox_filter"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:visibility="visible"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <CheckBox
                        android:id="@+id/checkbox_state_operation"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/selector_home_checkbox_filter"
                        android:button="@null"
                        android:gravity="center"
                        android:text="作业中"
                        android:textColor="@color/color_home_checkbox_filter"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:text="优先级"
                    android:textColor="#FF101010"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/checkbox_level_all"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/selector_home_checkbox_filter"
                    android:button="@null"
                    android:gravity="center"
                    android:text="全部"
                    android:textColor="@color/color_home_checkbox_filter"
                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:visibility="visible"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <CheckBox
                        android:id="@+id/checkbox_level_ordinary"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/selector_home_checkbox_filter"
                        android:button="@null"
                        android:gravity="center"
                        android:text="普通"
                        android:textColor="@color/color_home_checkbox_filter"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <CheckBox
                        android:id="@+id/checkbox_level_important"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/selector_home_checkbox_filter"
                        android:button="@null"
                        android:gravity="center"
                        android:text="重要"
                        android:textColor="@color/color_home_checkbox_filter"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <CheckBox
                        android:id="@+id/checkbox_level_urgent"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:background="@drawable/selector_home_checkbox_filter"
                        android:button="@null"
                        android:gravity="center"
                        android:text="紧急"
                        android:textColor="@color/color_home_checkbox_filter"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:gravity="center_vertical"
                    android:text="所属公司"
                    android:textColor="#FF101010"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <Spinner
                android:id="@+id/spinner_company"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/theme_background_f5"
                    android:gravity="center_horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_reset"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="#ffff"
                        android:gravity="center"
                        android:text="重置"
                        android:textColor="#FF888888"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_sure"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:background="#FF108CF7"

                        android:gravity="center"
                        android:text="确定"
                        android:textColor="@color/theme_white"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>
</LinearLayout>