<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/shape_enterprise_item_bg"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:gravity="center">


        <com.aopcloud.palmproject.view.CircularProgressView
            android:id="@+id/progress_bar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:backColor="#CCCFD0"
            app:progColor="#E51C23"
            app:progWidth="3dp"
            app:backWidth="3dp"
            app:progress="65"
             />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="60%"
            android:textColor="#888888"
            android:textSize="10sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/rl_progress_bar"
        android:text="项目2 "
        android:textColor="@color/theme_font_black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_manager_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/rl_progress_bar"
        android:text="负责 周祚栋 | 剩余 40天"
        android:textColor="@color/theme_font_6f"
        android:textSize="12sp" />

</RelativeLayout>