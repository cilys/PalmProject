<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_head_withe_bg"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_add"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="添加班组"
            android:textColor="#FF101010"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp" android:background="@color/theme_background_f5"/>


        <TextView
            android:id="@+id/tv_import"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:visibility="visible"
            android:layout_marginTop="1dp"
            android:background="@color/theme_white"
            android:gravity="center"
            android:text="从其他项目导入班组"
            android:textColor="#FF101010"
            android:textSize="16sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" android:background="@color/theme_background_f5"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@color/theme_white"
            android:gravity="center"
            android:text="取消"
            android:textColor="#FF41484D"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>